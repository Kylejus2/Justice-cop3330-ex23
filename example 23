import java.util.Scanner;
public class Main {
  public static void main(String[] args) {
    System.out.println("For the following questions, type yes or no");
    Scanner input = new Scanner(System.in);
    String silent,corroded,slicking,fail,engine,injection;
    System.out.print("Is the car silent when you turn the key?: ");
    silent= input.nextLine();
  
    if("yes".equals(silent)){
      {
      System.out.print("Are the battery terminals corroded?");
      corroded = input.nextLine();
      }
      if("yes".equals(corroded)){
        System.out.print("Clean terminals and try starting again");
        System.exit(0);}
      else 
      {
        System.out.print("Replace cables and try again.");
        System.exit(0);}}
    else
    {
      System.out.print("Does the car make a slicking noise?");
      slicking = input.nextLine();}
        if("yes".equals(slicking)){
        System.out.print("Replace the battery.");}
        else
        {
         System.out.print("Does the car crank up but fail to start?");
         fail = input.nextLine();}
         if("yes".equals(fail)){
         System.out.print("Check spark plugs.");}
         else
         {
           System.out.print("Does the engine start and then die?");
           engine = input.nextLine();}
           if("yes".equals(engine)){
           System.out.print("Does you car have fuel injection?");
           injection = input.nextLine();}
           if("yes".equals(injection)){
           System.out.print("Get it in for service");}
           else{
            System.out.print("Check to ensure the choke is opening and closing.");}
          }
         }
        }
